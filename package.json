{
  "name": "budgetzilla-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "cd client && pnpm dev",
    "build": "cd client && pnpm build && cd .. && cp -r client/dist/* server/public/",
    "build:client": "cd client && pnpm build",
    "build:server": "cd server && go build -o budgetzilla-server main.go",
    "start": "cd server && ./budgetzilla-server",
    "lint": "cd client && pnpm lint",
    "preview": "cd client && pnpm preview",
    "install-deps": "cd client && pnpm install"
  },
  "workspaces": [
    "client"
  ]
}